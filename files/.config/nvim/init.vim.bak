" Bootstrap Plug
if empty(glob('~/.config/nvim/autoload/plug.vim'))
  silent execute '!curl -fLo ~/.config/nvim/autoload/plug.vim --create-dirs https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim'
  autocmd VimEnter * PlugInstall
endif

"call plug#begin()
call plug#begin('~/.config/nvim/plugged')

" Themes
Plug 'arcticicestudio/nord-vim'                     " https://github.com/arcticicestudio/nord-vim
Plug 'catppuccin/nvim', {'as': 'catppuccin'}        " https://github.com/catppuccin/nvim
Plug 'folke/tokyonight.nvim', { 'branch': 'main' }  " https://github.com/folke/tokyonight.nvim
Plug 'ellisonleao/gruvbox.nvim'                     " https://github.com/ellisonleao/gruvbox.nvim

" Syntax highlight
Plug 'nvim-treesitter/nvim-treesitter', {'do': ':TSUpdate'}


call plug#end()

" General 
set number          " Show line nubmers
set nowrap          " Display long lines
set laststatus=2    " Show the status line all the time
set tabstop=2       " Global tab width
set softtabstop=2
set shiftwidth=2    " And again, related
set expandtab       " Use spaces instead of tabs
set background=dark " Force default colours for a dark background
set termguicolors

syntax enable
colorscheme gruvbox

let g:gruvbox_contrast_dark="medium"
